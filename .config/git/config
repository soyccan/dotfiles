[init]
defaultBranch = main

[core]
# true:  convert CRLF to LF when commit, and convert LF to CRLF when checkout
# input: convert CRLF to LF when commit
# false: (default) do nothing
autocrlf = input

# true:  reject on irreversible conversion
# warn:  warn on irreversible conversion
# false: do nothing
safecrlf = warn

# pager = less -R

[user]
email = soyccan@gmail.com
name = Zac Chengkang Chen

[diff]
tool = nvimdiff

[fetch]
parallel = 10
prune = true

[merge]
autoStash = true
tool = nvimdiff

[pull]
rebase = true

[push]
# https://stackoverflow.com/a/76994949
default = simple
autoSetupRemote = true

[rebase]
autoStash = true
rebaseMerges = true
